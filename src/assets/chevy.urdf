    <link name="front_axle_mount"/>

    <link name="front_axle">
        <visual>
            <geometry>
                <cylinder radius="0.25" length="4.6"/>
            </geometry>
            <material name="grey">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="8.0"/>
